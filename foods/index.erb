<html>
  <head>
    <meta charset="utf-8">
  </head>
  <body>
    <h1>Foods一覧</h1>
    <form action="/foods" method="post">
      <select name="food">
        <option value="all">全て</option>
        <option value="fruits">フルーツ</option>
        <option value="vegetables">野菜</option>
      </select>
      <button type="submit">検索</button>
    </form>
    <ul>
      <% if @foods.nil? %>
      <% else %>
        <% @foods.each do |food| %>
          <li><%= food[:name] %></li>
        <% end %>
      <% end %>
    </ul>
  </body>
</html>
